generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"] //this is the binary target for the prisma client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanType {
  free
  pro
  executive
}

enum Status {
  active
  cancelled
}


model Projects {
  id   String @id @default(uuid())

  userId      String
  projectName String

  status      Status
  currentPlan PlanType

  cardInfo   Json
  apiKeyInfo Json

  apiKey String @unique

  nextPaymentDate    DateTime
  currentBillingDate DateTime

  Images Images[]

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([status, nextPaymentDate, currentPlan])
}

model Images {
  id String @id

  originalImageUrl String @unique

  results Json[]

  Projects  Projects @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  createdAt DateTime @default(now())
}
