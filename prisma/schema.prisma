generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"] //this is the binary target for the prisma client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanType {
  free
  pro
  executive
}

enum Status {
  active
  cancelled
}

model Projects {
  id   String @id @default(uuid())
  user Users  @relation(fields: [userId], references: [id])

  userId      String
  projectName String

  apiKey String @unique

  nextPaymentDate    DateTime
  currentBillingDate DateTime
  createdAt          DateTime @default(now())

  status      Status
  currentPlan PlanType

  cardInfo   Json
  apiKeyInfo Json

  Images Images[]
}

model Images {
  id String @id @default(uuid())

  originalImage String @unique

  urls    String[]
  grain   Int[]
  channel String[]

  projectId String
  Projects  Projects @relation(fields: [projectId], references: [id])

  createdAt DateTime @default(now())
}

model Users {
  id    String @id
  email String @unique

  Projects Projects[]
}
